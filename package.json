{
  "name": "upwords-solver",
  "version": "0.1.0",
  "description": "Collection of tools for solving Upwords board game positions",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest -o",
    "test-watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --watchAll",
    "test-full": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --verbose --coverage",
    "test-precommit": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --passWithNoTests --coverage",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*' --write",
    "prettier-check": "prettier --config .prettierrc 'src/**/*' --check",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PossibilityZero/upwords-solver.git"
  },
  "keywords": [
    "upwords"
  ],
  "author": "Kai Nakazawa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PossibilityZero/upwords-solver/issues"
  },
  "homepage": "https://github.com/PossibilityZero/upwords-solver#readme",
  "dependencies": {
    "@kamilmielnik/trie": "^3.0.0",
    "upwords-toolkit": "^0.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.13.1"
  }
}
